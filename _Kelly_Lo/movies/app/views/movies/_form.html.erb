		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>
</fieldset>
<fieldset>
	<div class='fields'>
		<%= f.label :description %>
		<%= f.text_field :description %>
	</div>
</fieldset>
<fieldset>
	<div class='fields'>
		<%= f.label :year_released %>
